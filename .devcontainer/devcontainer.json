{
  "name": "Python Teaching Container",
  "customizations": {
    "vscode": {
      "settings": {
        "markdown.preview.security.level": "allow-insecure-local-content",
        "extensions.ignoreRecommendations": true,
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true,
        "git.rebaseWhenSync": true,
        "terminal.integrated.ignoreProcessKeybindingWarnings": true,
        "files.exclude": {
          "**/.github": true,
          "**/.devcontainer": true,
          ".gitignore": true,
          "**/assets": true,
          "requirements.txt": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.datawrangler",
        "mechatroner.rainbow-csv"
      ]
    }
  },
  "postCreateCommand": "pip install pandas matplotlib seaborn mplfinance yfinance scipy"
}
